@model IEnumerable<GameMetrics.ViewModels.PlayerHistory>
@{
    ViewBag.Title = "gameMetrics";
}
<h2>Game History</h2>
<h4>
<small>
    This data shows the selected Game's monitary transactions for each player.
</small>

</h4>
<div class="table-responsive"> 
    <table class="table  table-striped table-hover ">
        <tr>
            <th>
                Game
            </th>
            <th>
                Player
            </th>
            <th>
                $
            </th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                <div style="color:#fcc700;">@item.GameName</div>
            </td>
            <td>
                <div style="color:#abe30c;">@item.PlayerName</div>
            </td>
            <td>
                <div style="color:#fcc700;"> @item.Price</div>
        </td>
        </tr>
    }
    </table>
</div>

<a href='@(Url.Action( "GameArpu", "Home",""))'> 
<div class="badge"><h4> Back </h4></div>
</a>